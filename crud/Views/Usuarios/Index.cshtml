@model IEnumerable<crud.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Usuarios</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar</a>
    <a asp-action="reporteEmpleados" class="btn btn-warning">Generar Reporte</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paterno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Materno)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paterno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Materno)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.UserId">Editar</a> |
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.UserId">Detalles</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.UserId">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
